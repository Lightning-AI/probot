{
  "name": "lightning-probot",
  "version": "0.1.0",
  "description": "Bot actions for PyTorch Lightning",
  "author": "Carlos Mochol√≠ <carlos@grid.ai> (https://pytorchlightning.ai)",
  "license": "ISC",
  "repository": "https://github.com/PyTorchLightning/pytorch-lightning.git",
  "homepage": "https://github.com/PyTorchLightning/pytorch-lightning",
  "bugs": "https://github.com/PyTorchLightning/pytorch-lightning/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "start": "probot run ./dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*ts"
  },
  "dependencies": {
    "@probot/adapter-github-actions": "^3.0.0",
    "probot": "^11"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.0.5",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "typescript"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
